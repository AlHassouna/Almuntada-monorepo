{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@lib/pgsql": [
        "libs/pgsql/src/index.ts"
      ],
      "@lib/shared-hooks": [
        "libs/shared-hooks/src/index.ts"
      ],
      "@lib/shared-types": [
        "libs/shared-types/src/index.ts"
      ],
      "@lib/system-design": [
        "libs/system-design/src/index.ts"
      ],
      "@env": [
        "environment/environment.ts"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
